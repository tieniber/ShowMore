<?xml version="1.0" encoding="utf-8" ?>
<widget id="ShowMore.widget.ShowMore" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>ShowMore</name>
    <description>The description of this widget.</description>

    <icon />

    <properties>
        <property key="textDataAttr" type="attribute">
            <caption>Text Attribute</caption>
            <category>Appearance</category>
            <description>The attribute to display.</description>
            <attributeTypes>
                <attributeType name="String" />
            </attributeTypes>
        </property>
		<property key="showChars" type="integer" required="true" defaultValue="100">
			<caption>Show Characters</caption>
			<category>Appearance</category>
			<description>The number of characters to show before "show more" is clicked.</description>
		</property>
		<property key="moretext" type="translatableString" required="true">
			<caption>More Link Text</caption>
			<category>Appearance</category>
			<description>The text displayed for the "More" link.</description>
		</property>
		<property key="lesstext" type="translatableString" required="true">
			<caption>Less Link Text</caption>
			<category>Appearance</category>
			<description>The text displayed for the "Less" link.</description>
		</property>
    </properties>
</widget>
